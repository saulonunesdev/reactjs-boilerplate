{
  "name": "reactjs-boilerplate",
  "version": "0.0.1",
  "description": "A ReactJs BoilerPlate",
  "scripts": {
    "start": "webpack-dev-server",
    "wbundle": "webpack",
    "autofix:html": "eslint . --ext html --fix --config=.eslintrc.json",
    "autofix:md": "eslint . --ext md --fix --config=.eslintrc.json && remark . -qfo --rc-path=.remarkrc",
    "autofix:css": "stylelint \"src/styles/**/*.css\" --fix --allow-empty-input",
    "autofix:eslint": "eslint . --fix --config=.eslintrc.json  && standard --fix",
    "autofix": "npm-run-all --parallel autofix:*",
    "test": "npm-run-all test:lint && npm-run-all test:unit",
    "test:lint": "npm-run-all --parallel test:lint:*",
    "test:lint:js": "eslint './src/**/*.js' --config=.eslintrc.json",
    "test:lint:jsx": "eslint './src/**/*.jsx' --config=.eslintrc.json",
    "test:lint:md": "remark -qf . && eslint . --ext md --config=.eslintrc.json",
    "test:lint:css": "stylelint \"src/styles/**/*.css\" --allow-empty-input",
    "test:lint:html": "eslint . --ext html --config=.eslintrc.json",
    "test:lint:lockfile": "lockfile-lint --allowed-hosts npm github.com --validate-https --type npm --path package-lock.json",
    "test:unit": "npm-run-all --parallel test:unit:*",
    "test:unit:jsx": "jest -c jest.config.js --silent --passWithNoTests --coverage",
    "test:coveralls": "nyc npm run jest -c jest.config.js --silent --coverage && shx cat ./coverage/lcov.info | node ./bin/coveralls.js --verbose"
  },
  "author": "Saulo Nunes",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "postcss-import": "^12.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "reset-css": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@hot-loader/react-dom": "^16.11.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "autoprefixer": "^9.7.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "coveralls": "^3.0.13",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^3.4.0",
    "cssnano": "^4.1.10",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "lockfile-lint": "^3.0.4",
    "lost": "^8.3.1",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "^4.12.18",
    "react-inlinesvg": "^1.2.0",
    "remark-cli": "^7.0.1",
    "remark-frontmatter": "^1.3.2",
    "remark-lint": "^6.0.5",
    "remark-preset-lint-node": "^1.11.0",
    "rucksack-css": "^1.0.2",
    "shx": "^0.3.2",
    "standard": "^14.3.1",
    "standard-loader": "^7.0.0",
    "style-loader": "^1.1.1",
    "stylelint": "^12.0.0",
    "stylelint-config-twbs-bootstrap": "^1.0.0",
    "stylelint-webpack-plugin": "^1.1.2",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "lint-staged": {
    "*.{js}": [
      "npm run test:lint:js",
      "git add"
    ],
    "*.{jsx}": [
      "npm run test:lint:jsx && npm run test:unit:jsx",
      "git add"
    ],
    "*.{md}": [
      "npm run test:lint:md",
      "git add"
    ],
    "*.{html}": [
      "npm run test:lint:html",
      "git add"
    ],
    "*.{css}": [
      "npm run test:lint:css",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "standard": {
    "ignore": [
      "/dist/",
      "/coverage/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
